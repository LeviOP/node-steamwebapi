{
    "compilerOptions": {
        "target": "ES2017",
        "module": "Node16",
        "lib": ["ES2017"],
        "moduleResolution": "Node16",
        "rootDir": "src",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "declarationMap": true,
        "noUnusedParameters": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/**/*"]
}
